{
  "index_patterns": ["smc-trading-*"],
  "version": 1,
  "settings": {
    "number_of_shards": 2,
    "number_of_replicas": 1,
    "index.refresh_interval": "5s",
    "index.max_result_window": 50000,
    "analysis": {
      "analyzer": {
        "audit_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "id": {
        "type": "keyword",
        "index": true
      },
      "timestamp": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "event_type": {
        "type": "keyword",
        "index": true
      },
      "severity": {
        "type": "keyword",
        "index": true
      },
      "component": {
        "type": "keyword",
        "index": true
      },
      "user_id": {
        "type": "keyword",
        "index": true
      },
      "user_email": {
        "type": "keyword",
        "index": true
      },
      "session_id": {
        "type": "keyword",
        "index": true
      },
      "ip_address": {
        "type": "ip"
      },
      "user_agent": {
        "type": "text",
        "analyzer": "standard"
      },
      "endpoint": {
        "type": "keyword",
        "index": true
      },
      "method": {
        "type": "keyword",
        "index": true
      },
      "status_code": {
        "type": "integer"
      },
      "resource_id": {
        "type": "keyword",
        "index": true
      },
      "resource_type": {
        "type": "keyword",
        "index": true
      },
      "action": {
        "type": "keyword",
        "index": true
      },
      "outcome": {
        "type": "keyword",
        "index": true
      },
      "risk_score": {
        "type": "integer",
        "index": true
      },
      "risk_level": {
        "type": "keyword",
        "index": true
      },
      "details": {
        "type": "object",
        "dynamic": true
      },
      "error_message": {
        "type": "text",
        "analyzer": "standard"
      },
      "stack_trace": {
        "type": "text",
        "analyzer": "standard",
        "index": false
      },
      "performance_metrics": {
        "type": "object",
        "properties": {
          "response_time": {
            "type": "float"
          },
          "cpu_usage": {
            "type": "float"
          },
          "memory_usage": {
            "type": "float"
          },
          "latency": {
            "type": "float"
          }
        }
      },
      "compliance_tags": {
        "type": "keyword",
        "index": true
      },
      "request_id": {
        "type": "keyword",
        "index": true
      },
      "geoip": {
        "properties": {
          "location": {
            "type": "geo_point"
          },
          "country_name": {
            "type": "keyword"
          },
          "city_name": {
            "type": "keyword"
          },
          "continent_code": {
            "type": "keyword"
          },
          "country_code2": {
            "type": "keyword"
          },
          "region_name": {
            "type": "keyword"
          }
        }
      },
      "environment": {
        "type": "keyword",
        "index": true
      },
      "service": {
        "type": "keyword",
        "index": true
      },
      "version": {
        "type": "keyword",
        "index": true
      },
      "tags": {
        "type": "keyword",
        "index": true
      },
      "type": {
        "type": "keyword",
        "index": true
      }
    }
  },
  "aliases": {
    "smc-trading-logs": {},
    "audit-logs": {
      "filter": {
        "term": {
          "type": "audit"
        }
      }
    },
    "security-logs": {
      "filter": {
        "terms": {
          "tags": ["security_incident", "security"]
        }
      }
    },
    "compliance-logs": {
      "filter": {
        "term": {
          "tags": "compliance"
        }
      }
    },
    "trading-logs": {
      "filter": {
        "term": {
          "tags": "trading_activity"
        }
      }
    }
  }
}