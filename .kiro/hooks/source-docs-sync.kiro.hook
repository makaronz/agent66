{
  "enabled": true,
  "name": "Source Code Documentation Sync",
  "description": "Monitors all source files in the repository and triggers documentation updates in README.md or /docs folder when changes are detected",
  "version": "1",
  "when": {
    "type": "userTriggered",
    "patterns": [
      "*.py",
      "*.ts",
      "*.tsx",
      "*.js",
      "*.jsx",
      "*.rs",
      "*.go",
      "*.java",
      "*.cpp",
      "*.c",
      "*.h",
      "*.hpp",
      "*.cs",
      "*.php",
      "*.rb",
      "*.swift",
      "*.kt",
      "*.scala",
      "*.clj",
      "*.hs",
      "*.ml",
      "*.fs",
      "*.elm",
      "*.dart",
      "*.lua",
      "*.r",
      "*.m",
      "*.pl",
      "*.sh",
      "*.ps1",
      "*.bat",
      "*.yaml",
      "*.yml",
      "*.json",
      "*.toml",
      "*.ini",
      "*.cfg",
      "*.conf",
      "package.json",
      "Cargo.toml",
      "requirements.txt",
      "pyproject.toml",
      "composer.json",
      "Gemfile",
      "go.mod",
      "pom.xml",
      "build.gradle",
      "*.sql",
      "*.md"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Source files have been modified. Please analyze the changes and update the documentation accordingly. If there is a README.md file, update it to reflect any new features, API changes, or architectural modifications. If there is a /docs folder, update the relevant documentation files there. Focus on keeping the documentation accurate and up-to-date with the current codebase implementation. Include any new dependencies, configuration changes, or usage examples that may be needed."
  }
}